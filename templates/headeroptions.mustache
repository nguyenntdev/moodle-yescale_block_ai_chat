{{!
    @template block_ai_chat/headeroptions

    Fluent UI inspired header options for AI Chat modal

    Classes required for JS:
    * Various IDs for option handlers

    Context variables:
    * badge - Optional badge information
    * showPersona - Whether to show persona options
    * showOptions - Whether to show general options

    Example context (json):
    {
        "badge": {
            "title": "Restricted",
            "text": "Private Chat"
        },
        "showPersona": true,
        "showOptions": true
    }
}}

<div class="headeroptions" role="toolbar" aria-label="{{#str}}chatoptions, block_ai_chat{{/str}}">
    {{#badge}}
    <span class="status-badge" 
          title="{{title}}" 
          role="status"
          aria-label="{{title}}">
        <i class="fa fa-lock" aria-hidden="true"></i>
        <span>{{text}}</span>
    </span>
    {{/badge}}

    <!-- Main actions menu -->
    <div class="dropdown block_ai_chat_action_menu" role="group" aria-label="{{#str}}chatactions, block_ai_chat{{/str}}">
        <button type="button"
                class="dropdown-toggle-btn" 
                data-bs-toggle="dropdown" 
                aria-expanded="false"
                aria-haspopup="true"
                aria-label="{{#str}}moreoptions, core{{/str}}">
            <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
        </button>
        
        <div class="dropdown-menu dropdown-menu-right" role="menu">
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_new_dialog"
                    role="menuitem">
                <i class="fa fa-plus" aria-hidden="true"></i>
                <span>{{#str}}newdialog, block_ai_chat{{/str}}</span>
            </button>
            
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_show_history"
                    role="menuitem">
                <i class="fa fa-history" aria-hidden="true"></i>
                <span>{{#str}}history, block_ai_chat{{/str}}</span>
            </button>
            
            {{#showPersona}}
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_define_persona"
                    role="menuitem">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
                <span>{{#str}}definepersona, block_ai_chat{{/str}}</span>
            </button>
            {{/showPersona}}
            
            {{#showOptions}}
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_options"
                    role="menuitem">
                <i class="fa fa-cog" aria-hidden="true"></i>
                <span>{{#str}}options{{/str}}</span>
            </button>
            {{/showOptions}}
            
            <div class="dropdown-divider" role="separator"></div>
            
            <button type="button" 
                    class="dropdown-item danger-item" 
                    id="block_ai_chat_delete_dialog"
                    role="menuitem">
                <i class="fa fa-trash" aria-hidden="true"></i>
                <span>{{#str}}delete, block_ai_chat{{/str}}</span>
            </button>
        </div>
    </div>

    <!-- View mode options -->
    <div class="dropdown block_ai_chat_action_menu views" role="group" aria-label="{{#str}}viewoptions, block_ai_chat{{/str}}">
        <button type="button"
                class="dropdown-toggle-btn" 
                data-bs-toggle="dropdown" 
                aria-expanded="false"
                aria-haspopup="true"
                aria-label="{{#str}}changeview, block_ai_chat{{/str}}">
            <i class="fa fa-expand" aria-hidden="true"></i>
        </button>
        
        <div class="dropdown-menu dropdown-menu-right" role="menu">
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_chatwindow"
                    role="menuitem">
                <i class="fa fa-window-restore" aria-hidden="true"></i>
                <span>{{#str}}chatwindow, block_ai_chat{{/str}}</span>
            </button>
            
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_openfull"
                    role="menuitem">
                <i class="fa fa-expand" aria-hidden="true"></i>
                <span>{{#str}}openfull, block_ai_chat{{/str}}</span>
            </button>
            
            <button type="button" 
                    class="dropdown-item" 
                    id="block_ai_chat_dockright"
                    role="menuitem">
                <i class="fa fa-window-maximize" aria-hidden="true"></i>
                <span>{{#str}}dockright, block_ai_chat{{/str}}</span>
            </button>
        </div>
    </div>
</div>
